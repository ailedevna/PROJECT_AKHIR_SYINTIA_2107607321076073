<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".tuanib_activity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tuankuib_txt1"
           android:layout_width="330dp"
           android:layout_height="wrap_content"
           android:text="TUANKU IMAM BONJOL"
           android:gravity="center_horizontal"
           android:textSize="34dp"
           android:fontFamily="@font/glossy"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_header"
           android:layout_marginTop="20dp"/>

       <ImageView
           android:id="@+id/pahltuankuib_gambar1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/gtuankuib"
           android:layout_marginTop="80dp" />

       <TextView
           android:id="@+id/pahltuankuib_txt2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Deskripsi"
           android:layout_below="@+id/pahltuankuib_gambar1"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:textSize="18dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/pahltuankuib_txt3"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pahltuankuib_txt2"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_deskripsi"
           android:layout_marginTop="8dp"
           android:padding="16dp"
           android:gravity="center"
           android:text="Nama asli dari Tuanku Imam Bonjol adalah Muhammad Shahab, yang lahir di Bonjol pada 1 Januari 1772. Dia merupakan putra dari pasangan Bayanuddin Shahab (ayah) dan Hamatun (ibu). Ayahnya, Khatib Bayanuddin Shahab, merupakan seorang alim ulama yang berasal dari Sungai Rimbang, Suliki, Lima Puluh Kota."
           android:textSize="16dp"
           android:textColor="@color/black"
           android:fontFamily="sans-serif"/>
       <TextView
           android:id="@+id/pahltuankuib_txt4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Masa Perjuangan"
           android:layout_below="@+id/pahltuankuib_txt3"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:textSize="18dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/pahltuankuib_txt5"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pahltuankuib_txt4"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_deskripsi"
           android:layout_marginTop="8dp"
           android:padding="16dp"
           android:gravity="center"
           android:text="Ia merupakan seorang ulama yang berjuang melawan Belanda dalam peperangan yang dikenal dengan nama Perang Padri tahun 1803-1838."
           android:textSize="16dp"
           android:textColor="@color/black"
           android:fontFamily="sans-serif"/>
   </RelativeLayout>

</ScrollView>