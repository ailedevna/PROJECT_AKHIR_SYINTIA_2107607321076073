<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".sutansyahrir_activity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/sutansyahrir_txt1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="SUTAN SYAHRIR"
        android:gravity="center_horizontal"
        android:textSize="34dp"
        android:fontFamily="@font/glossy"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_header"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/pahlsutansyah_gambar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gsutansyahrir"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/pahlsutansyah_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:layout_below="@+id/pahlsutansyah_gambar1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pahlsutansyah_txt3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pahlsutansyah_txt2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_deskripsi"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="Sjahrir lahir di Koto Gadang, Agam, Sumatera Barat pada 5 Maret 1909.Ayahnya bernama Mohamad Rasad dan ibunya bernama Puti Siti Rabiah."
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>
    <TextView
        android:id="@+id/pahlsutansyah_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masa Perjuangan"
        android:layout_below="@+id/pahlsutansyah_txt3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pahlsutansyah_txt5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pahlsutansyah_txt4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_deskripsi"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="seorang tokoh yang memperjuangkan kemerdekaan Indonesia dengan berani menentang kebijakan-kebijakan yang diterapkan oleh Belanda dan Jepang serta berusaha mewujudkan dan memperjuangkan keadilan bagi seluruh rakyat Indonesia"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

  </RelativeLayout>

</ScrollView>