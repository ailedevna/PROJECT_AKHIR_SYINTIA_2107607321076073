<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".mohnatsir_activity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/mohnatsir_txt1"
           android:layout_width="330dp"
           android:layout_height="wrap_content"
           android:text="MOHAMMAD NATSIR"
           android:gravity="center_horizontal"
           android:textSize="34dp"
           android:fontFamily="@font/glossy"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_header"
           android:layout_marginTop="20dp"/>

       <ImageView
           android:id="@+id/pahlmohnatsir_gambar1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:background="@drawable/gmuhammadnatsir"
           android:layout_marginTop="80dp" />

       <TextView
           android:id="@+id/pahlmohnatsir_txt2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Deskripsi"
           android:layout_below="@+id/pahlmohnatsir_gambar1"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:textSize="18dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/pahlmohnatsir_txt3"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pahlmohnatsir_txt2"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_deskripsi"
           android:layout_marginTop="8dp"
           android:padding="16dp"
           android:gravity="center"
           android:text="Lahir di Lembah Gumanti, Kab. Solok pada 17 Juli 1908, Natsir lahir dari keluarga Minangkabau yang taat dalam menjalankan ajaran agama Islam. Ayahnya bernama Mohammad Idris Sutan Saripado dan ibunya bernama Khadijah.. "
           android:textSize="16dp"
           android:textColor="@color/black"
           android:fontFamily="sans-serif"/>
       <TextView
           android:id="@+id/pahlmohnatsir_txt4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Masa Perjuangan"
           android:layout_below="@+id/pahlmohnatsir_txt3"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:textSize="18dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/pahlmohnatsir_txt5"
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pahlmohnatsir_txt4"
           android:layout_centerHorizontal="true"
           android:background="@drawable/background_deskripsi"
           android:layout_marginTop="8dp"
           android:padding="16dp"
           android:gravity="center"
           android:text="Mohammad Natsir adalah seorang ulama, politisi dan juga seorang pejuang kemerdekaan. Beliau mendirikan partai Islam Masyumi dan juga dikenal di dunia internasional sebagai Presiden Liga Muslim Sedunia (World Muslim Congress) dan juga menjadi Ketua Dewan Masjid Sedunia."
           android:textSize="16dp"
           android:textColor="@color/black"
           android:fontFamily="sans-serif"/>
   </RelativeLayout>

</ScrollView>